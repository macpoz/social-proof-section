@import url('https://fonts.googleapis.com/css2?family=Spartan:wght@400;500;700&display=swap');

$font-spartan = 'Spartan', sans-serif;


$very-dark-magenta = hsl(300, 43%, 22%)
$soft-pink = hsl(333, 80%, 67%)

$dark-grayish-magenta = hsl(303, 10%, 53%)
$light-grayish-magenta = hsl(300, 24%, 96%)
$white = hsl(0, 0%, 100%)

*
  margin 0
  padding 0
  font-family $font-spartan

html
  font-size 15px

body
  background-image url("./images/bg-pattern-top-mobile.svg"), url("./images/bg-pattern-bottom-mobile.svg")
  background-position top, bottom
  background-repeat no-repeat
  font-size 15px
  display flex
  justify-content center
  align-items center
  flex-direction column
  min-height 100vh
  height 100%
  @media(min-width:600px)
    background-image url("./images/bg-pattern-top-desktop.svg"), url("./images/bg-pattern-bottom-desktop.svg")
    background-position: left top, bottom right

  > div
    margin 4rem 1.5rem
    display flex
    justify-content center
    flex-direction column
    @media(min-width:1150px)
      margin 5rem 4rem 4rem
      max-width 1110px

header
  display flex
  color $very-dark-magenta
  justify-content center
  flex-direction column
  text-align center
  @media(min-width:1150px)
    flex-direction row
    justify-content space-between

  > div
    margin-bottom 2rem

    &:first-of-type
      @media(min-width:1150px)
        width 29rem
        margin-right 8rem
        text-align left

    &:last-of-type
      margin-top 1rem

  h1
    margin-bottom 2rem
    font-weight 700
    @media(min-width:600px)
      font-size: 47px
      margin-bottom .5rem
      line-height 1em
  p
    color $dark-grayish-magenta
    line-height 1.8em
    font-weight 500

  .stars-section
    margin-bottom 0

    > div
      margin-bottom 1rem
      background-color $light-grayish-magenta
      padding 1rem 0
      border-radius .5rem
      width 100%

      @media(min-width:1150px)
        display flex
        justify-content flex-start
        align-items center
        padding 1.2rem 2rem
        width 390px
        &:nth-of-type(2)
          margin-left 3rem
          margin-right 6rem
        &:last-of-type
          margin-left 6rem
          margin-right 3rem

    .stars
      margin-bottom .5rem

      >img
        margin-right .2rem

      @media(min-width:600px)
        margin-bottom 0


    h2
      font-size 14px
      @media(min-width:600px)
        margin-left 2rem



main
  display flex
  flex-direction column
  margin-top 2rem
  @media(min-width:600px)
    flex-direction row
    justify-content space-between
    align-items stretch
    margin-top 1rem
  @media(min-width:1150px)
    align-items flex-start

.review
  background-color $very-dark-magenta
  color $white
  padding 2rem
  border-radius .5rem
  font-size 13px
  margin 0

  &:not(:first-of-type)
    margin-top 1rem

    @media(min-width:600px)
      margin-left 2rem
      margin-top 0

    @media(min-width:1150px)
      margin-top 1rem

  &:last-of-type
    margin-top 1rem
    @media(min-width:600px)
      margin-top 0

    @media(min-width:1150px)
      margin-top 2rem

  @media(min-width:600px)
    padding 2.5rem 2rem
    width 30%

  > div
    display flex
    align-items center
    margin-bottom 1.5rem

  img
    width 3rem
    border-radius 2rem

  .personal
    display flex
    flex-direction column
    margin-left 1rem
    font-size 13px

    span:first-of-type
      font-weight 500

    span:last-of-type
        color $soft-pink
        margin-top 0.4rem
  p
    line-height 1.8em




